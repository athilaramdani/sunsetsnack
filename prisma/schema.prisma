generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId    Int      @id @default(autoincrement())
  nama      String
  username  String   @unique
  email     String   @unique
  password  String
  alamat    String?
  no_telp   String?
  rank      String?  @default("Reguler")
  image     String?
  roleToko  String?
  role      Role     @default(PEMBELI)
  toko      UserToko[]
  orders    Order[]
  reviews   Review[]
  cart      Cart?
  notifications Notification[]
}

model Toko {
  tokoId    Int     @id @default(autoincrement())
  nama      String
  provinsi  String
  kota      String
  alamat    String
  deskripsi String? @default("")
  users     UserToko[]
  products  Product[]
}

model UserToko {
  userId    Int
  tokoId    Int
  role      String?
  user      User  @relation(fields: [userId], references: [userId])
  toko      Toko  @relation(fields: [tokoId], references: [tokoId])

  @@id([userId, tokoId])
}

model Product {
  productId  Int      @id @default(autoincrement())
  nama       String
  deskripsi  String?
  harga      Float
  stok       Int
  terjual    Int?
  kategori   String
  tokoId     Int
  image      String?
  toko       Toko     @relation(fields: [tokoId], references: [tokoId])
  orderDetails OrderDetail[]
  reviews    Review[]
  cartItems  CartItem[]
}

model Order {
  orderId     Int            @id @default(autoincrement())
  tanggalPesanan DateTime
  status      String
  alamat      String
  userId      Int
  user        User           @relation(fields: [userId], references: [userId])
  orderDetails OrderDetail[]
  payments    Payment[]
  pengiriman  Pengiriman[]
}

model OrderDetail {
  orderDetailId Int     @id @default(autoincrement())
  kuantitas     Int
  subtotal      Float
  orderId       Int
  order         Order   @relation(fields: [orderId], references: [orderId])
  productId     Int
  product       Product @relation(fields: [productId], references: [productId])
}

model Payment {
  paymentId         Int      @id @default(autoincrement())
  tanggalPembayaran DateTime
  jumlah            Float
  metodePembayaran  String
  orderId           Int
  order             Order   @relation(fields: [orderId], references: [orderId])
}

model Pengiriman {
  pengirimanId      Int      @id @default(autoincrement())
  tanggalPengiriman DateTime
  statusPengiriman  String
  orderId           Int
  order             Order   @relation(fields: [orderId], references: [orderId])
}

model Review {
  reviewId   Int     @id @default(autoincrement())
  rating     Int
  komentar   String
  productId  Int
  product    Product @relation(fields: [productId], references: [productId])
  userId     Int
  user       User    @relation(fields: [userId], references: [userId])
  image      String?
}

model Cart {
  cartId    Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [userId])
  cartItems CartItem[]
}

model CartItem {
  cartItemId Int      @id @default(autoincrement())
  quantity   Int
  productId  Int
  product    Product  @relation(fields: [productId], references: [productId])
  cartId     Int
  cart       Cart     @relation(fields: [cartId], references: [cartId])
}

model Notification {
  notificationId Int     @id @default(autoincrement())
  judul          String
  pesan          String
  tanggalnotifikasi DateTime
  userId         Int
  user           User    @relation(fields: [userId], references: [userId])
}

enum Role {
  PEMBELI
  PENJUAL
}
